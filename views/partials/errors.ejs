<!-- views/partials/errors.ejs -->

<% if (locals.errors && errors.length > 0) { %>
  <div class="error-alert">
    <div class="error-heading">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="red" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-alert-icon lucide-circle-alert"><circle cx="12" cy="12" r="10"/><line x1="12" x2="12" y1="8" y2="12"/><line x1="12" x2="12.01" y1="16" y2="16"/></svg>
      <p class="error-text">Error</p>
    </div>
    <ul>
      <% errors.forEach(error => { %>
        <li class="error-text"><%= error.msg || error %></li>
      <% }) %>
    </ul>
  </div>
<% } %>
